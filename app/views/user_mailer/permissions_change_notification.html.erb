<p><%= t('helpers.greeting') %> <%= @project_group.user.name %></p>

<%
access_level = t('helpers.project.share.read_only')
if @project_group.access_level == 2 then
        access_level = t('helpers.project.share.editor')
elsif @project_group.access_level == 3 then
        access_level = t('helpers.project.share.co_owner')
end
%>

<%
project_link = link_to @project_group.project.title, project_path(@project_group.project, :only_path => false)
%>

<%= raw t('helpers.project.share.permission_email_text', :access_level => access_level, :project_link => project_link) %>
